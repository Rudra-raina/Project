<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopperista">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shopperista">
        <activity android:name=".activities.ui.activities.SoldProductDetailsActivity"
            android:label="Sold Products"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.ui.activities.MyOrderDetailsActivity"
            android:label="My Orders"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ui.activities.CheckoutActivity"
            android:label="Check Out"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ui.activities.AddEditAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".activities.ui.activities.AddressListActivity"
            android:label="Address list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ui.activities.CartListActivity"
            android:label="My Cart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ui.activities.ProductDetailsActivity"
            android:label="Product Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ui.activities.AddProductActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".activities.ui.activities.SettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ui.activities.DashboardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ui.activities.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".activities.ui.activities.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".activities.ui.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".activities.ui.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".activities.ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ui.activities.MainActivity" />
    </application>

</manifest>